
<h1>Keys</h1>

<table>
  <thead>
    <tr>
      <th>Member</th>
      <th>Identifier</th>
      <th>Assigned</th>
      <th>Returned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @keys.each do |key| %>
      <tr>
        <td><%= key.user.name unless key.user.nil? %>
        <td><%= key.identifier %></td>
        <td><%= key.assigned %></td>
        <td><%= key.returned %></td>
        <td><%= link_to 'Show', key %></td>
        <td><% if key.assigned.nil? %>
          <%= link_to 'Assign Key', edit_key_path(key) %>
          <% elsif key.returned.nil? %>
          <%= link_to 'Return Key', edit_key_path(key) %>
          <% end %>
        </td>
        <td><%= link_to 'Destroy', key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

